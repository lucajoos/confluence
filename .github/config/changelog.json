{
  "categories": [
    {
      "title": "## ✨ Features",
      "labels": [
        "feature"
      ]
    },
    {
      "title": "## 🐛 Fixes",
      "labels": [
        "fix", "dependencies"
      ]
    },
    {
      "title": "## 📚 Documentation",
      "labels": [
        "docs"
      ]
    },
    {
      "title": "## 📦 Refactoring",
      "labels": [
        "refactor"
      ]
    },
    {
      "title": "## 🚨 Tests",
      "labels": [
        "test"
      ]
    },
    {
      "title": "## ⚙️ Continuous Integrations",
      "labels": [
        "ci"
      ]
    }
  ],
  "template": "${{CHANGELOG}}\n\n<details>\n<summary>Uncategorized</summary>\n\n${{UNCATEGORIZED}}\n</details>",
